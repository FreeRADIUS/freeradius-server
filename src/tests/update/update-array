#
#  PRE: update array
#

update request {
       &Class := 0x01020304
       &Class += 0x05060708
       &Class += 0x090a0b0c
}


#
#  Use array references in the RHS
#  of the update section
#

update request {
	&Proxy-State += &Class[0]
	&Proxy-State += &Class[1]
	&Proxy-State += &Class[2]
}

if (&Proxy-State != 0x01020304) {
	test_fail
}

#  Must be the same as above
if (&Proxy-State[0] != 0x01020304) {
	test_fail
}

if (&Proxy-State[1] != 0x05060708) {
	test_fail
}

if (&Proxy-State[2] != 0x090a0b0c) {
	test_fail
}

# must not exist
if (&Proxy-State[3]) {
	test_fail
}

success
