#
#  PRE: update
#
update control {
       Cleartext-Password := 'hello'
}

update request {
       NAS-IP-Address    := 127.0.0.1
       Framed-IP-Address := 127.0.0.1
}

#
#  Check attribute references
#
if (!(NAS-IP-Address == &Framed-IP-Address)) {
	update reply {
		Filter-Id += 'fail'
	}
}

update request {
       NAS-IP-Address    := 0.0.0.0
       Framed-IP-Address := 255.255.255.255
}

if (!(NAS-IP-Address != &Framed-IP-Address)) {
	update reply {
		Filter-Id += 'fail'
	}
}

if (!(NAS-IP-Address < &Framed-IP-Address)) {
	update reply {
		Filter-Id += "fail"
	}
}

if (NAS-IP-Address > &Framed-IP-Address) {
	update reply {
		Filter-Id += "fail"
	}
}

success
