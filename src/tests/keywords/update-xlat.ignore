#
# PRE: update
#
#  Form attribute references with xlats
#

&request.Tmp-String-0 := 'Tmp-String-1'

#
#  Shouldn't update Tmp-String-0, should instead update Tmp-String-1
#  ... maybe this is what Alan meant when he was talking about people
#  doing stupid things with this feature.
#
"%{request.Tmp-String-0}" := 'hello'

if (&request.Tmp-String-1 != 'hello') {
	test_fail
}

if (&request.Tmp-String-0 == 'hello') {
	test_fail
}

#
#  Try updating an attribute specified by an OID string
#  for an unknown vendor
#
&request.Tmp-Integer-0 := 66
"Vendor-%{request.Tmp-Integer-0}-1" := 0x01020304

if (&request.Vendor-66-1 != 0x01020304) {
	test_fail
}

#
#  Try updating an attribute specified by an OID string
#  for a known vendor
#
&request.Tmp-Integer-0 := 11344
"Vendor-%{request.Tmp-Integer-0}-1" := 127.0.0.1

if (&request.Vendor-Specific.FreeRADIUS.Proxied-To != 127.0.0.1) {
	test_fail
}

"%(attr_num:request.Tmp-String-1)" := 'hello2'

if (&request.Tmp-String-1 != 'hello2') {
	test_fail
}

success
