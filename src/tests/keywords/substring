	Tmp-String-5 := "%{substring:&Tmp-IP-Address-0 15 5}"
	Tmp-String-6 := "%{substring:&Tmp-IP-Address-0 4 -20}"
	Tmp-String-7 := "%{substring:&Tmp-IP-Address-0 0 13}"
	Tmp-String-8 := "%{substring:&Tmp-IP-Address-0 6 0}"
