#
#  PRE: update if regex-escape
#

#
#  Strings which are expanded in a regex have regex special
#  characters escaped.  Because the input strings are unsafe.
#
&request.Tmp-String-0 := "example.com"
&request.Tmp-String-1 := "^foo$bar"

if (&request.Tmp-String-0 !~ /example\.com$/) {
	test_fail
}
elsif (&request.Tmp-String-1 !~ /\^foo\$bar/) {
	test_fail
} else {
	success
}
