update request {
	&Tmp-String-1 := 'baz'
	&Tmp-String-1 += 'boink'
}

#
#  String (Intersection)
#
update request {
	&Tmp-String-0 == &Tmp-String-1[0]
}

if (&Tmp-String-0[0] != &Tmp-String-1[0]) {
	test_fail
}

if ("%{Tmp-String-0[#]}" != 1) {
	test_fail
}

debug_request

update control {
	&Auth-Type := Accept
}

success
