#
#  PRE: update
#
update control {
	&Tmp-Integer-0 := 5
	&Tmp-Integer-0 += 10
	&Tmp-Integer-0 += 15
	&Tmp-Integer-0 += 20
	&Tmp-String-0 := 'foo'
	&Tmp-String-0 += 'baz'
	&Tmp-String-0 += 'boink'
}

# Reset the request list
update {
	&request: !* ANY
	&request: += &control.[*]
}

debug_request

#
#  Integer ==
#
update request {
	&Tmp-Integer-0 == 10
}

if (&Tmp-Integer-0[0] != 10) {
	test_fail
}

if ("%{Tmp-Integer-0[#]}" != 1) {
	test_fail
}

if ("%{Tmp-String-0[#]}" != 3) {
	test_fail
}

debug_request

# Reset the request list
update {
	&request: !* ANY
	&request: += &control.[*]
}

#
#  String ==
#
update request {
	&Tmp-String-0 == 'baz'
}

if (&Tmp-String-0[0] != 'baz') {
	test_fail
}

if ("%{Tmp-String-0[#]}" != 1) {
	test_fail
}

debug_request

