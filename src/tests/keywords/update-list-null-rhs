#
# PRE: update
#
#  Form attribute references with xlats
#
&request.Tmp-String-0 += 'foo'
&request.Tmp-String-0 += 'bar'
&request.Tmp-String-1 += 'baz'
&control !* ANY

if (&request.Tmp-String-0[0] != 'foo') {
	fail
}

# Now delete the LHS by assigning the control list to it (which is empty)
&request := &control

if (&request.Tmp-String-0 || &request.Tmp-String-1) {
	fail
}

success
