#
#  PRE: update if
#

update request {
	&Tmp-Integer-0 := "%(debug:4)"
}

# Check debug level is now 4
if ("%(debug:3)" != 4) {
	test_fail
}

# Call with NULL arg, should report current level
if ("%(debug:%{Tmp-String-8})" != 3) {
	test_fail
}

# ...and again
if ("%(debug:%{Tmp-String-8})" != 3) {
	test_fail
}

# ...and again
if ("%(debug:)" != 3) {
	test_fail
}

# ...and again
if ("%(debug:)" != 3) {
	test_fail
}

success
