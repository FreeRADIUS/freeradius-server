#
# PRE: update
# PROTOCOL: dhcpv4
#

&control.Tmp-Octets-0 := 0x520d0103abcdef0206010203040506

if ("%(decode.dhcpv4:%{control.Tmp-Octets-0})" != 2) {
        test_fail
}

debug_request

if (&control.Relay-Agent-Information.Circuit-Id != 0xabcdef) {
        test_fail
}

if (&control.Relay-Agent-Information.Remote-Id != 0x010203040506) {
        test_fail
}

&control.Tmp-Octets-1 := "%(encode.dhcpv4:&control.request[*])"

if (&control.Tmp-Octets-1 != 0x520d0103abcdef0206010203040506 ) {
        test_fail
}

debug_control
success
