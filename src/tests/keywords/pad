#
#  PRE: if update return
#

update request {
	&Tmp-String-0 = "test"
}

#
#	rpad tests
#
if ("%{rpad: 7 %{Tmp-String-0}}" != "test   ") {
	test_fail
	return
}

if ("%{rpad: 2 %{Tmp-String-0}}" != "test") {
	test_fail
	return
}

if ("%{rpad:x 7 %{Tmp-String-0}}" != "testxxx") {
	test_fail
	return
}

#
#	lpad tests
#
if ("%{lpad: 7 %{Tmp-String-0}}" != "   test") {
	test_fail
	return
}

if ("%{lpad: 2 %{Tmp-String-0}}" != "test") {
	test_fail
	return
}

if ("%{lpad:x 7 %{Tmp-String-0}}" != "xxxtest") {
	test_fail
	return
}

success
