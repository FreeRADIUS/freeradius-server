#
#  PRE: update if
#

# Dotted Quad
&request.Tmp-IP-Address-0 := 127.0.0.1

# Dotted Quad with prefix
&request.Tmp-IP-Address-1 := 127.0.0.2/32

# Hex (0x)
&request.Tmp-IP-Address-2 := 0x7f000003

# Decimal
&request.Tmp-IP-Address-3 := 2130706436

if (&request.NAS-IP-Address != 127.0.0.1) {
	test_fail
}

if (&request.Tmp-IP-Address-0 != 127.0.0.1) {
	test_fail
}

if (&request.Tmp-IP-Address-1 != 127.0.0.2) {
	test_fail
}

if (&request.Tmp-IP-Address-2 != 127.0.0.3) {
	test_fail
}

if (&request.Tmp-IP-Address-3 != 127.0.0.4) {
	test_fail
}

success
