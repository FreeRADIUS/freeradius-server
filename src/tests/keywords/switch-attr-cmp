#
#  PRE: Switch
#
update request {
	Tmp-String-0 := &User-Name
}

#
#  A switch statement where we compare two attributes
#
switch &User-Name {
	case &Tmp-String-0 {
		update reply {
			Filter-Id := "filter"
		}
	}

	case "doug" {
		update reply {
			Filter-Id := "doug"
		}
	}

	case {
		update reply {
			Filter-Id := "default"
		}
	}

}