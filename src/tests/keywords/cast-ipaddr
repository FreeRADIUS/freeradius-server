			test_fail
		}
		update request {
			&Module-Failure-Message !* ANY
		}
		ok
	}
}

#
#  IPv6 Address outside mapping range to IPv4 address
#
redundant {
	group {
		update control {
			&Tmp-Cast-Ipaddr := &Tmp-Cast-IPv6Addr[0]
		}
		test_fail
	}
	group {
