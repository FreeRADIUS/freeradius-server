		}
		test_fail
	}
	group {
		if ("%{Module-Failure-Message}" != 'Assigning value to "Tmp-Cast-ipaddr" failed: Invalid cast from ipv6prefix to ipaddr.  Only /128 (not /32) prefixes may be cast to IP address types') {
			test_fail
		}
		update request {
			&Module-Failure-Message !* ANY
		}
		ok
	}
}

#
