#
# PRE: update
#
#  Form attribute references with xlats
#
&request.Tmp-String-0 += 'foo'
&request.Tmp-String-0 += 'bar'
&request.Tmp-String-1 += 'baz'
&control !* ANY

if ("%{request.Tmp-String-0[#]}" != 2) {
	test_fail
}

if (&request.Tmp-String-0[0] != 'foo') {
	fail
}

# Delete an attribute by assigning a non-existent attribute to it
&request.Tmp-String-0[1] := &request.Reply-Message

# Should only remove 'bar'
if (&request.Tmp-String-0[0] != 'foo') {
	fail
}

# Nothing should exist for this attribute.
if (&request.Tmp-String-0[1]) {
	fail
}

if (&request.Tmp-String-0[2]) {
	fail
}

&request.Tmp-String-0 := &request.Reply-Message

# All instances should be removed
if (&request.Tmp-String-0) {
	fail
}

success
