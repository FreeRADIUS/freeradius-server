#
# PRE: update
#

&request.Tmp-String-0 := 'foobarbaz'
&request.Tmp-Integer-0 := 123456789
&request.Tmp-IP-Address-0 := 192.0.2.1

if ((&request.Tmp-String-0 != 'foobarbaz') || (&request.Tmp-Integer-0 != 123456789) || (&request.Tmp-IP-Address-0 != 192.0.2.1)) {
	test_fail
}

# Remove all attributes in the control list
&request !* ANY

# All attributes should now of been removed
if ((&request.Tmp-String-0 && (&request.Tmp-String-0 == 'foobarbaz')) || \
    (&request.Tmp-Integer-0 && (&request.Tmp-Integer-0 == 123456789)) || \
    (&request.Tmp-IP-Address-0 && (&request.Tmp-IP-Address-0 == 192.0.2.1))) {
	test_fail
}

# This will of been removed too
&request.User-Password := 'hello'

success
