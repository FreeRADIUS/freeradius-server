#
# PRE: update if
#

&request.Vendor-Specific.Cisco.AVPair := 'foo=bar'
&request.Vendor-Specific.Cisco.AVPair += 'bar=baz'
&request.Vendor-Specific.Cisco.AVPair += 'baz=foo'

if (&request.Vendor-Specific.Cisco.AVPair[1] =~ /bar=(.*)/) {
	if ("%{1}" != 'baz') {
		test_fail
	}
}
else {
	test_fail
}

if (&request.Vendor-Specific.Cisco.AVPair[*] =~ /bar=(.*)/) {
	if ("%{1}" != 'baz') {
		test_fail
	}
}
else {
	test_fail
}

success
