#
#  PRE: if
#
#  Note the test for %(interpreter:.line) is sensitive to the position of the
#  "update request" line in the file
#

&request.Tmp-String-0 := "%(interpreter:.filename)"
&request.Tmp-Integer-0 := "%(interpreter:.line)"
&request.Tmp-String-1 := "%(interpreter:.name)"
&request.Tmp-String-2 := "%(interpreter:.type)"

if (&request.Tmp-String-0 != "src/tests/keywords/xlat-interpreter") {
        test_fail
}

if (&request.Tmp-String-1 != "request") {
        test_fail
}

if (&request.Tmp-String-2 != "update") {
        test_fail
}

if (&request.Tmp-Integer-0 != 8) {
        test_fail
}

success
