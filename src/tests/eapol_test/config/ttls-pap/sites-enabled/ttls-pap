server inner-tunnel {
	namespace = radius

recv Access-Request {
	copy_request_to_tunnel
	filter_username
	filter_inner_identity

	split_username_nai
	&control.Password.Cleartext := &Stripped-User-Name

	chap
	mschap
	eap {
		ok = return
	}

	files

	pap
}

authenticate pap {
	pap
}

authenticate chap {
	chap
}

authenticate mschap {
	mschap
}

authenticate eap {
	eap
}

send Access-Accept {
	ok
}

send Access-Reject {
	ok
}
}
