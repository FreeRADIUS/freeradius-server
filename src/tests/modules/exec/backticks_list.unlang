#
#  Sync calls should always return a zero length string
#  because we don't wait for the response.
#
update request {
	&Tmp-String-0 := `/bin/sh -c 'echo hello'`
}
if (&Tmp-String-0 != 'hello') {
	test_fail
} else {
	test_pass
}

