#
#  Run the "redis" xlat
#
$INCLUDE cluster_reset.inc

update control {
	&Pool-Name := 'test_update'
}

#
#  Add IP addresses
#
update request {
	&Tmp-String-0 := `./build/bin/local/rlm_redis_ippool_tool -a 192.168.0.1/32 %{control:Tmp-String-0}:30001 %{control:Pool-Name} 192.168.0.0`
}

# 1. Check allocation
redis_ippool
if (updated) {
	test_pass
} else {
	test_fail
}

#
#  Attempt to reserve an IP address by performing a renew
#
update {
	&request:Framed-IP-Address := 192.168.0.1
	&request:NAS-IP-Address := 127.0.0.1
	&control:Pool-Action := Renew
}
redis_ippool

# 3. Check the expiry attribute is present and correct
if (&reply:Session-Timeout == 60) {
	test_pass
} else {
	test_fail
}

# 4. Verify the gateway was set
if ("%{redis:HGET {%{control:Pool-Name}%}:ip:%{reply:Framed-IP-Address} gateway}" == '127.0.0.1') {
	test_pass
} else {
	test_fail
}

# 5. Verify we got an IP
if (&reply:Framed-IP-Address == 192.168.0.1) {
	test_pass
} else {
	test_fail
}

update {
	&reply: !* ANY
}
