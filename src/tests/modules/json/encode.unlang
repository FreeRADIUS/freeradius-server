#    | cut -c44- \
#    | sed -e 's/\\"/"/g' \
#          -e 's/\s*$//' \
#          -e "s/:= \"/== '/" \
#          -e 's/^/if (/' \
#          -e "s/\"$/') {/" \
#          -e "s/$/\n	test_pass\n} else {\n	test_fail\n}\n/"

test_pass
